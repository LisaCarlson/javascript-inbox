          ul.nav.navbar-nav.navbar-right
            li
              a(href='#')
                span(class="badge" id="message-num") 
                |   unread messages
    table#messages.table
      tbody
    #newLabelModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='newLabelModalLabel')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') Ã—
            h4#newLabelModalLabel.modal-title Create New Label
          .modal-body
            label Label Name
            input(id='new-label').form-control
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Cancel
            button.btn.btn-success(id="createLabel" type='button') Create Label






    