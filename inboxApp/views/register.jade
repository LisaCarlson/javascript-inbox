extends layout

block content
  nav.navbar.navbar-inverse
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') My App
      ul.nav.navbar-nav.navbar-right
        li
          a(href='/signin') Sign In
  .container
    .page-header
      h1 Welcome! 
        small Please register or sign in.
    .row
      .col-md-6.col-md-offset-3
        form.form-group(action='/' method='post') 
          label(for='email')
            i(class='glyphicon glyphicon-envelope')
            strong Email
          input.form-control(type='email' name='email' id='email')
          label(for='password')
            i(class="fa fa-unlock-alt")
            strong Password
          input.form-control(type='password' name='password' id='password')
          label(for='password_confirmation') 
            i(class='glyphicon glyphicon-ok')
            strong Password Confirmation
          input.form-control(type='password' name='password_confirmation' id='password_confirmation')
          button(type='submit' class='btn btn-info') Register